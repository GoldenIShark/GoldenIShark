<body>
    <div class="container">
        <h1>Pindahkan Box</h1>
        
        <div class="box-container">
            <div id="box">Box</div>
        </div>
        
        <button id="move-button">Pindahkan ke Kanan (20px)</button>
    </div>

    <script>
        // Mendapatkan elemen box dan tombol
        const box = document.getElementById('box');
        const moveButton = document.getElementById('move-button');
        const positionDisplay = document.getElementById('position');
        
        // Variabel untuk menyimpan posisi box
        let currentPosition = 20;
        
        // Fungsi untuk memindahkan box
        function moveBox() {
            // Batasi pergerakan agar tidak keluar dari container
            if (currentPosition < 275) {
                currentPosition += 5;
                box.style.left = currentPosition + 'px';
            } else {
                
            }
        }
        
        // Event listener untuk tombol
        moveButton.addEventListener('click', moveBox);
        
        // Event listener untuk keyboard (panah kanan)
        document.addEventListener('keydown', function(event) {
            if (event.key === 'ArrowRight') {
                moveBox();
            }
        });
    </script>
